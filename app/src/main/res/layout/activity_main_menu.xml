<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/mainMenuID"
            android:layout_width="match_parent"
            android:layout_height="273dp"
            android:text="TextView" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/editProfileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit My Profile" />

        <Button
            android:id="@+id/addOtherButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Other Contacts" />

        <Button
            android:id="@+id/viewOtherProfileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Other Profiles" />

        <Button
            android:id="@+id/shareDataButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share Data" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>